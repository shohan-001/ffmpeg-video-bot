# FFmpeg Processor Bot
# Required
BOT_TOKEN=your_bot_token_here
OWNER_ID=your_telegram_id
API_ID=your_api_id
API_HASH=your_api_hash

# MongoDB
MONGO_URI=mongodb://localhost:27017
DATABASE_NAME=ffmpeg_bot

# Optional - Comma separated user IDs who can use the bot (leave empty for public)
AUTHORIZED_USERS=

# Directories
DOWNLOAD_DIR=/app/downloads
OUTPUT_DIR=/app/outputs

# Limits
MAX_FILE_SIZE=2000
MAX_DURATION=7200

# FFmpeg Defaults
DEFAULT_VIDEO_CODEC=libx264
DEFAULT_AUDIO_CODEC=aac
DEFAULT_CRF=23
DEFAULT_PRESET=medium
DEFAULT_AUDIO_BITRATE=192k

# Telegram
TG_MAX_FILE_SIZE=2000

# Google Drive (Optional - for files > 2GB)
GDRIVE_CREDENTIALS=credentials.json
GDRIVE_FOLDER_ID=
GDRIVE_ENABLED=True
